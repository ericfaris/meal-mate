{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Kill Frontend",
      "type": "shell",
      "command": "powershell -Command \"Get-Process -Name 'node' -ErrorAction SilentlyContinue | Where-Object {$_.CommandLine -like '*frontend*'} | Stop-Process -Force; Start-Sleep -Milliseconds 500\"",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Kill Backend",
      "type": "shell",
      "command": "powershell -Command \"Get-Process -Name 'node' -ErrorAction SilentlyContinue | Where-Object {$_.CommandLine -like '*backend*'} | Stop-Process -Force; Start-Sleep -Milliseconds 500\"",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "group": "dev"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "group": "dev"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Restart Frontend",
      "dependsOn": [
        "Kill Frontend",
        "Start Frontend"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Restart Backend",
      "dependsOn": [
        "Kill Backend",
        "Start Backend"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Start Dev Environment",
      "dependsOn": [
        "Start Frontend",
        "Start Backend"
      ],
      "problemMatcher": []
    },
    {
      "label": "Restart Dev Environment",
      "dependsOn": [
        "Restart Frontend",
        "Restart Backend"
      ],
      "problemMatcher": []
    },
    {
      "label": "Kill All Node Processes",
      "type": "shell",
      "command": "powershell -Command \"Stop-Process -Name node -Force -ErrorAction SilentlyContinue; if ($?) { Write-Host 'All Node processes killed successfully' } else { Write-Host 'No node processes found or already terminated' }\"",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "EAS Build: Android Preview (APK)",
      "type": "shell",
      "command": "npx eas-cli build --platform android --profile preview",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "group": "eas-build"
      },
      "problemMatcher": []
    },
    {
      "label": "EAS Build: Android Production",
      "type": "shell",
      "command": "npx eas-cli build --platform android --profile production",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "group": "eas-build"
      },
      "problemMatcher": []
    },
    {
      "label": "EAS Build: List Recent Builds",
      "type": "shell",
      "command": "npx eas-cli build:list --platform android --limit 5",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
